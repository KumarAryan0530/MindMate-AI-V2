# MindMate-AI Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys

# Django Settings
SECRET_KEY=your-django-secret-key-here
DEBUG=False

# Database Configuration (Production)
# For local development, leave commented to use SQLite
# For production (Render/Railway), this will be auto-configured
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis Configuration (Production) 
# For local development without Redis, set USE_REDIS=False
# For production, this will be auto-configured
USE_REDIS=True
# REDIS_URL=redis://localhost:6379/0

# Security Settings (Production)
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Google Gemini AI API
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Cloudflare AI API
# Get your credentials from: https://dash.cloudflare.com/
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here

# Twilio Configuration (for Voice Calls)
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ElevenLabs Configuration (for AI Voice)
# Get API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-elevenlabs-agent-id

# Ngrok URL for local development (WebSocket webhooks)
NGROK_URL=

# Celery Configuration (optional)
# Set to True to run tasks synchronously in development (no Redis needed)
CELERY_ALWAYS_EAGER=False

# Media Files Configuration
MEDIA_ROOT=media/
MEDIA_URL=/media/

# Cloudinary Configuration (Optional - for production media storage)
# Get free account at: https://cloudinary.com/
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-cloudinary-api-key
# CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

