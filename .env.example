# MindMate Docker Environment Variables
# Copy this to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis (automatically configured in docker-compose)
# When running services on the host (not inside Docker), use localhost so
# host processes can resolve and connect to the container's published port.
REDIS_URL=redis://127.0.0.1:6379/0

# Development Mode: Run without Redis/Docker (set to False to use in-memory channels)
# Set to True if you have Redis running (via Docker or standalone)
USE_REDIS=True

# Celery: Run tasks synchronously without background worker (development only)
# Set to True to execute tasks immediately without Celery worker
CELERY_ALWAYS_EAGER=False

# Google Gemini AI API
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Cloudflare AI API
# Get your credentials from: https://dash.cloudflare.com/
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Twilio Configuration
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ElevenLabs Configuration
# Get API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=

# Ngrok URL for local development (WebSocket webhooks)
# Ngrok URL (changes each restart): Get from ngrok session status
NGROK_URL=

# Media Files
MEDIA_ROOT=media/
MEDIA_URL=/media/

# Database (SQLite is used by default, no configuration needed)
# For PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://user:password@postgres:5432/safemind_db

# Redis Configuration
# REDIS_URL=redis://localhost:6379/0
